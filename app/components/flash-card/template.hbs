<header>
  <div class="index">
    {{position}}.
  </div>
</header>

<div class="row fieldsContainer">
  <div class="col inputContainer">
    <div class="title row">汉语</div>
    {{one-way-textarea model.chinese
        update=(action "handleUpdate" "chinese")
        autocomplete="off"
        autocorrect="off"
        autocapitalize="off"
        spellcheck=false}}
  </div>

  <div class="col inputContainer">
    <div class="title row">Pinyin</div>
    {{one-way-textarea model.pinyin
        class="pinyinEditor"
        update=(action 'processChange')
        autocomplete="off"
        autocorrect="off"
        autocapitalize="off"
        spellcheck=false}}
  </div>

  <div class="col inputContainer">
    <div class="title row">English</div>
    {{one-way-textarea model.english
        update=(action "handleUpdate" "english")
        autocomplete="off"
        autocorrect="off"
        autocapitalize="off"
        spellcheck=false}}
  </div>
</div>
