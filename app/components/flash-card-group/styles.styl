&
  width: 100%
  padding: 1em
  background: dope-blue
  height: 24em

.conversation-header
  margin-left: calc(2em - 1em)
  color: off-white
  font-size: 1.5em
  align-items: baseline
  .index
    margin-right: 0.25em

.conversation-title
  background: 0
  border: 0
  border-bottom: 1px dashed
  color: off-white
  font-size: 1.3em
  width: 16em

.conversation-title::placeholder
  color: rgba(off-white, 0.5)

.flash-card-container
  overflow-x: auto
  overflow-y: hidden
  margin: 1em 0

.create-flash-card
  color: white
  font-size: 1em
  padding: 1em
  opacity: 0.15
  transition: all 0.2s ease-in-out

.create-flash-card:hover
  opacity: 1
